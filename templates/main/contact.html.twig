{% extends 'base.html.twig' %}

{% block title %}
	Contact |
	{{ parent() }}
{% endblock %}

{# START: contact #}
{% block body %}
	<section class="page">
		<h2>Informations</h2>
		<div class="information">
			<p>
				üìß Envoyer nous un e-mail :
			</p>
			<a class="page__link-text page__link_color_blue" id="contact-email-link" href="mailto:contact@eshop.fr">contact@eshop.fr</a>
		</div>
		<h2>Contactez-nous</h2>
		{# START: contactForm #}
		{{ form_start(contactForm, { 'attr': { 'novalidate': 'novalidate', 'class': 'form', 'id': 'contact-form' }}) }}
		{# subject #}
		<div class="form-field">
			{{ form_label(contactForm, 'Sujet:', { 'label_attr': { 'class': 'form__label form__contact-subject-label' }}) }}
			{{ form_widget(contactForm.subject) }}
			<p class="error-message error-message_color_red error-message-contact-subject-not-checked display-none">
				Merci de s√©lectionner une valeur.
			</p>
			{{ form_errors(contactForm.subject) }}
		</div>
		{# gender #}
		<div class="form-field">
			{{ form_widget(contactForm.civilityTitle) }}
			<p class="error-message error-message_color_red error-message-user-gender-not-checked display-none">
				Merci de s√©lectionner une valeur.
			</p>
			{{ form_errors(contactForm.civilityTitle) }}
		</div>
		{# firstName #}
		<div class="form-field">
			{{ form_label(contactForm, 'Pr√©nom:', { 'label_attr': { 'class': 'display-none' }}) }}
			{{ form_widget(contactForm.firstName, { 'id': 'contact-first-name-input', 'attr': {'class': 'form-field__input form-field__user-first-name-input form-field__input_color_black', 'placeholder': 'Pr√©nom' }}) }}
			<p class="error-message error-message_color_red error-message-user-first-name-blank display-none">
				Merci de saisir un pr√©nom.
			</p>
			{{ form_errors(contactForm.firstName) }}
		</div>
		{# lastName #}
		<div class="form-field">
			{{ form_label(contactForm, 'Nom:', { 'label_attr': { 'class': 'display-none' }}) }}
			{{ form_widget(contactForm.lastName, { 'id': 'contact-last-name-input', 'attr': {'class': 'form-field__input form-field__user-last-name-input form-field__input_color_black', 'placeholder': 'Nom'}}) }}
			<p class="error-message error-message_color_red error-message-user-last-name-blank display-none">
				Merci de saisir un nom.
			</p>
			{{ form_errors(contactForm.lastName) }}
		</div>
		{# email #}
		<div class="form-field">
			{{ form_label(contactForm, 'E-mail:', { 'label_attr': { 'class': 'display-none' }}) }}
			{{ form_widget(contactForm.email, { 'id': 'contact-email-input', 'attr': {'class': 'form-field__input form-field__user-e-mail-input form-field__input_color_black', 'placeholder': 'E-mail' }}) }}
			<p class="error-message error-message_color_red error-message-user-e-mail display-none">
				Merci de saisir un e-mail.
			</p>
			{{ form_errors(contactForm.email) }}
		</div>
		{# phoneNumber #}
		<div class="form-field">
			{{ form_label(contactForm, 'Num√©ro de t√©l√©phone mobile:', { 'label_attr': { 'class': 'display-none' }}) }}
			{{ form_widget(contactForm.phoneNumber, { 'id': 'contact-phone-number-input', 'attr': {'class': 'form-field__input form-field__phone-number-input form-field__input_color_black', 'placeholder': 'Num√©ro de t√©l√©phone mobile' }}) }}
			<p class="error-message error-message_color_red error-message-phone-number display-none">
				Merci de saisir un num√©ro de t√©l√©phone mobile.
			</p>
			{{ form_errors(contactForm.phoneNumber) }}
		</div>
		{# upload #}
		<div class="form-field">
			{{ form_label(contactForm, 'Fichier:', { 'label_attr': { 'class': 'display-none' }}) }}
			{{ form_widget(contactForm.upload, { 'id': 'contact-upload-input', 'attr': { 'class': 'form-field__input form-field__contact-file-input form-field__input_color_black' }}) }}
			<p class="error-message error-message_color_red error-message-contact-file-mime-type display-none">
				Merci de t√©l√©verser un fichier au format PDF, PNG, JPEG ou SVG.
			</p>
			<p class="error-message error-message_color_red error-message-contact-file-size display-none">
				Merci de t√©l√©verser un fichier de maximum 2 000 000 bytes.
			</p>
			{{ form_errors(contactForm.upload) }}

		</div>
		{# message #}
		<div class="form-field">
			{{ form_label(contactForm, 'Message:', { 'label_attr': { 'class': 'display-none' }}) }}
			{{ form_widget(contactForm.message, { 'id': 'contact-message-input', 'attr': {'class': 'form-field__input form-field__input-contact-message form-field__input_color_black form-field__contact-message-input form-field__input_color_black', 'placeholder': 'Message' }}) }}
			<p class="error-message error-message_color_red error-message-contact-message display-none">
				Merci de saisir un message.
			</p>
			{{ form_errors(contactForm.message) }}
		</div>
		{# Submit button #}
		<button type="submit" class="page__button page__contact-button page__submit-button page__button_background-color_blue page__button_color_white" id="contact-button">Envoyer</button>
		{{ form_end(contactForm) }}
		{# END: contactForm #}
	</section>
{% endblock %}
{# END: contact #}
