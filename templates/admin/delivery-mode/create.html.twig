{% extends 'base.html.twig' %}

{% block title %}
	Créer - Mode de Livraison |
	{{ parent() }}
{% endblock %}

{# START: admin_delivery_mode_create #}
{% block body %}
	<section class="page">
		<h2>Créer un Mode de Livraison</h2>
		{# START :adminCreateDeliveryModeForm #}
		{{ form_start(adminCreateDeliveryModeForm, { 'attr': { 'novalidate': 'novalidate', 'class': 'form', 'id': 'admin-delivery-mode-create-form' }}) }}
		{# picture #}
		<div class="form-field">
			{{ form_label(adminCreateDeliveryModeForm, 'Photo', { 'label_attr': { 'class': 'form-field__label form-field__delivery-mode-picture-label display-none' }}) }}
			{{ form_widget(adminCreateDeliveryModeForm.picture, { 'id': 'delivery-mode-picture-input', 'attr': { 'class': 'form-field__input form-field__delivery-mode-picture-input form-field__input_color_black' }}) }}
			<p class="error-message error-message_color_red error-message-delivery-mode-picture-mime-type display-none">
				Merci de télécharger un fichier au format PDF, PNG, JPEG ou SVG.
			</p>
			<p class="error-message error-message_color_red error-message-delivery-mode-picture-size display-none">
				Merci de télécharger un fichier de maximum 300 000 bytes.
			</p>
			{{ form_errors(adminCreateDeliveryModeForm.picture) }}
		</div>
		{# name #}
		<div class="form-field">
			{{ form_label(adminCreateDeliveryModeForm, 'Nom', { 'label_attr': { 'class': 'form-field__label form-field__delivery-mode-name-label display-none' }}) }}
			{{ form_widget(adminCreateDeliveryModeForm.name, { 'id': 'delivery-mode-name-input', 'attr': {'class': 'form-field__input form-field__delivery-mode-name-input form-field__input_color_black', 'placeholder': 'Nom' }}) }}
			<p class="error-message error-message_color_red error-message-delivery-mode-name-empty display-none">
				Merci de saisir un nom.
			</p>
			{{ form_errors(adminCreateDeliveryModeForm.name) }}
		</div>
		{# price #}
		<div class="form-field">
			{{ form_label(adminCreateDeliveryModeForm, 'Prix', { 'label_attr': { 'class': 'form-field__label form-field__delivery-mode-price-label display-none' }}) }}
			{{ form_widget(adminCreateDeliveryModeForm.price, { 'id': 'delivery-mode-price-input', 'attr': {'class': 'form-field__input form-field__delivery-mode-price-input form-field__input_color_black', 'placeholder': 'Prix en euros' }}) }}
			<p class="error-message error-message_color_red error-message-delivery-mode-price display-none">
				Merci de saisir un prix en euros.
			</p>
			{{ form_errors(adminCreateDeliveryModeForm.price) }}
		</div>
		{# minCartAmountForFreeDelivery #}
		<div class="form-field">
			{{ form_label(adminCreateDeliveryModeForm, 'Montant minimum d\'achat pour gratuité', { 'label_attr': { 'class': 'form-field__label form-field__delivery-mode-min-cart-amount-for-free-delivery-label display-none' }}) }}
				{{ form_widget(adminCreateDeliveryModeForm.minCartAmountForFreeDelivery, { 'id': 'delivery-mode-min-cart-amount-for-free-delivery-input', 'attr': {'class': 'form-field__input form-field__delivery-mode-min-cart-amount-for-free-delivery-input form-field__input_color_black', 'placeholder': 'Montant minimum d\'achat pour gratuité' }}) }}
			<p class="error-message error-message_color_red error-message-delivery-mode-min-cart-amount-for-free-delivery display-none">Merci de saisir un prix en euros.</p>
			{{ form_errors(adminCreateDeliveryModeForm.minCartAmountForFreeDelivery) }}
		</div>
		{# description #}
		<div class="form-field">
			{{ form_label(adminCreateDeliveryModeForm, 'Description', { 'label_attr': { 'class': 'form-field__label form-field__delivery-mode-description-label display-none' }}) }}
			{{ form_widget(adminCreateDeliveryModeForm.description, { 'id': 'delivery-mode-description-input', 'attr': {'class': 'form-field__input form-field__delivery-mode-description-input form-field__input_color_black', 'placeholder': 'Description' }}) }}
			<p class="error-message error-message_color_red error-message-delivery-mode-description-empty display-none">
				Merci de saisir une description.
			</p>
			{{ form_errors(adminCreateDeliveryModeForm.description) }}
		</div>
		{# adminCreateDeliveryModeForm submit button #}
		<button type="submit" class="page__button page__create-button page__submit-button page__button_background-color_dodger-blue page__button_color_white" id="admin-delivery-mode-create-button">
			Créer
		</button>
		{{ form_end(adminCreateDeliveryModeForm) }}
		{# END: adminCreateDeliveryModeForm #}
	</section>
{% endblock %}
{# END: admin_delivery_mode_create #}
