{% extends 'base.html.twig' %}

{% block title %}
	Mettre à jour - Mode de Livraison -
	{{ deliveryMode.name }}
	|
	{{ parent() }}
{% endblock %}

{# START : admin_delivery_mode_update #}
{% block body %}
	<section class="page">
		<h2>Mettre à jour Mode de livraison :
			{{ deliveryMode.name }}</h2>
		{# START :adminUpdateDeliveryModeForm #}
		{{ form_start(adminUpdateDeliveryModeForm, { 'attr': { 'novalidate': 'novalidate', 'class': 'form', 'id': 'admin-delivery-mode-update-form' }}) }}
		{# picture #}
		<div class="form-field-picture">
			<img class="page__delivery-mode-picture" src="{{ asset('assets/uploads/delivery-modes/' ~ deliveryMode.picture) }}" alt="image {{ deliveryMode.name }}"/>
		</div>
		{# upload #}
		<div class="form-field">
			{{ form_label(adminUpdateDeliveryModeForm, 'Photo', { 'label_attr': { 'class': 'form-field__label form-field__delivery-mode-picture-label display-none' }}) }}
			{{ form_widget(adminUpdateDeliveryModeForm.upload, { 'id': 'delivery-mode-picture-input', 'attr': { 'class': 'form-field__input form-field__delivery-mode-picture-input form-field__input_color_black' }}) }}
			<p class="error-message error-message_color_red error-message-delivery-mode-picture-mime-type display-none">
				Merci de télécharger un fichier au format PDF, PNG, JPEG ou SVG.
			</p>
			<p class="error-message error-message_color_red error-message-delivery-mode-picture-size display-none">
				Merci de télécharger un fichier de maximum 300 000 bytes.
			</p>
			{{ form_errors(adminUpdateDeliveryModeForm.upload) }}
		</div>
		{# name #}
		<div class="form-field">
			{{ form_label(adminUpdateDeliveryModeForm, 'Nom', { 'label_attr': { 'class': 'form-field__label form-field__delivery-mode-name-label display-none' }}) }}
			{{ form_widget(adminUpdateDeliveryModeForm.name, { 'id': 'delivery-mode-name-input', 'attr': {'class': 'form-field__input form-field__delivery-mode-name-input form-field__input_color_black', 'placeholder': 'Nom' }}) }}
			<p class="error-message error-message_color_red error-message-delivery-mode-name-empty display-none">
				Merci de saisir un nom.
			</p>
			{{ form_errors(adminUpdateDeliveryModeForm.name) }}
		</div>
		{# price #}
		<div class="form-field">
			{{ form_label(adminUpdateDeliveryModeForm, 'Prix', { 'label_attr': { 'class': 'form-field__label form-field__delivery-mode-price-label display-none' }}) }}
			{{ form_widget(adminUpdateDeliveryModeForm.price, { 'id': 'delivery-mode-price-input', 'attr': {'class': 'form-field__input form-field__delivery-mode-price-input form-field__input_color_black', 'placeholder': 'Prix en euros' }}) }}
			<p class="error-message error-message_color_red error-message-delivery-mode-price display-none">
				Merci de saisir un prix en euros.
			</p>
			{{ form_errors(adminUpdateDeliveryModeForm.price) }}
		</div>
		{# minCartAmountForFreeDelivery #}
		<div class="form-field">
			{{ form_label(adminUpdateDeliveryModeForm, 'Montant minimum d\'achat pour gratuité', { 'label_attr': { 'class': 'form-field__label form-field__delivery-mode-min-cart-amount-for-free-delivery-label display-none' }}) }}
				{{ form_widget(adminUpdateDeliveryModeForm.minCartAmountForFreeDelivery, { 'id': 'delivery-mode-min-cart-amount-for-free-delivery-input', 'attr': {'class': 'form-field__input form-field__delivery-mode-min-cart-amount-for-free-delivery-input form-field__input_color_black', 'placeholder': 'Montant minimum d\'achat pour gratuité' }}) }}
			<p class="error-message error-message_color_red error-message-delivery-mode-min-cart-amount-for-free-delivery display-none">Merci de saisir un prix en euros.</p>
			{{ form_errors(adminUpdateDeliveryModeForm.minCartAmountForFreeDelivery) }}
		</div>
		{# description #}
		<div class="form-field">
			{{ form_label(adminUpdateDeliveryModeForm, 'Description', { 'label_attr': { 'class': 'form-field__label form-field__delivery-mode-description-label display-none' }}) }}
			{{ form_widget(adminUpdateDeliveryModeForm.description, { 'id': 'delivery-mode-description-input', 'attr': {'class': 'form-field__input form-field__delivery-mode-description-input form-field__input_color_black', 'placeholder': 'Description' }}) }}
			<p class="error-message error-message_color_red error-message-delivery-mode-description-empty display-none">
				Merci de saisir une description.
			</p>
			{{ form_errors(adminUpdateDeliveryModeForm.description) }}
		</div>
		{# adminUpdateDeliveryModeForm submit button #}
		<button type="submit" class="page__button page__update-button page__submit-button page__button_background-color_orange page__button_color_white" id="admin-delivery-mode-update-button">
			Mettre à jour
		</button>
		{{ form_end(adminUpdateDeliveryModeForm) }}
		{# END : adminUpdateDeliveryModeForm #}
	</section>
{% endblock %}
{# END : admin_delivery_mode_update #}
