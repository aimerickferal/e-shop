{% extends 'base.html.twig' %}

{% block title %}
	Mettre à jour - Commande -
	{{ purchase.reference|upper }}
	-
	{{ user.firstName }}
	{{ user.lastName }}
	|
	{{ parent() }}
{% endblock %}

{# START : admin_purchase_update #}
{% block body %}
	<section class="page">
		<h2>
			Mettre à jour Commande :
			{{ purchase.reference|upper }}
			-
			{{ user.firstName }}
			{{ user.lastName }}
		</h2>
		{# START : adminUpdatePurchaseForm #}
		{{ form_start(adminUpdatePurchaseForm, { 'attr': { 'novalidate': 'novalidate', 'class': 'form', 'id': 'admin-purchase-update-form' }}) }}
		{# status #}
		<div class="form-field">
			{{ form_label(adminUpdatePurchaseForm, 'Statut :', { 'label_attr': { 'class': 'form-field__label form-field__purchase-status-label' }}) }}
			{{ form_widget(adminUpdatePurchaseForm.status) }}
			<p class="error-message error-message_color_red error-message-purchase-status-not-checked display-none">
				Merci de sélectionner un statut.
			</p>
			{{ form_errors(adminUpdatePurchaseForm.status) }}
		</div>
		{# upload #}
		<div class="form-field">
			{{ form_label(adminUpdatePurchaseForm, 'Facture :', { 'label_attr': { 'class': 'form-field__label form-field__purchase-bill-label' }}) }}
			{{ form_widget(adminUpdatePurchaseForm.upload, { 'id': 'purchase-bill-input', 'attr': { 'class': 'form-field__input form-field__purchase-bill-input form-field__input_color_black' }}) }}
			<p class="error-message error-message_color_red error-message-purchase-bill-mime-type display-none">
				Merci de télécharger un fichier au format PDF, PNG, JPEG ou SVG.
			</p>
			<p class="error-message error-message_color_red error-message-purchase-bill-size display-none">
				Merci de télécharger un fichier de maximum 300 000 bytes.
			</p>
			{{ form_errors(adminUpdatePurchaseForm.upload) }}
		</div>
		{# adminUpdatePurchaseForm submit button #}
		<button type="submit" class="page__button page__update-button page__submit-button page__button_background-color_orange page__button_color_white" id="admin-purchase-update-button">
			Mettre à jour
		</button>
		{{ form_end(adminUpdatePurchaseForm) }}
		{# END : adminUpdatePurchaseForm #}
	</section>
{% endblock %}
{# END : admin_purchase_update #}
