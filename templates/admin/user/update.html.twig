{% extends 'base.html.twig' %}

{% block title %}
	Mettre à jour - Utilisateur -
	{{ user.firstName }}
	{{ user.lastName }}
	|
	{{ parent() }}
{% endblock %}

{# START: admin_user_update #}
{% block body %}
<section class="page">
	<h2>Mettre à jour Utilisateur :
		{{ user.firstName }}
		{{ user.lastName }}</h2>
	{{ form_start(adminUserUpdateForm, { 'attr': { 'novalidate': 'novalidate', 'class': 'form', 'id': 'admin-user-update-form' }}) }}
	{# picture #}
	<div class="form-field-picture">
		<img class="page__user-picture" src="{{ asset('assets/uploads/users/' ~ user.picture) }}" alt="{{ user.firstName }}"/>
	</div>
	{# upload #}
	<div class="form-field">
		{{ form_label(adminUserUpdateForm, 'Photo de profil', { 'label_attr': { 'class': 'form-field__label form-field__user-picture-label display-none' }}) }}
		{{ form_widget(adminUserUpdateForm.upload, { 'id': 'user-picture-input', 'attr': { 'class': 'form-field__input form-field__user-picture-input form-field__input_color_black' }}) }}
		<p class="error-message error-message_color_red error-message-user-picture-mime-type display-none">
			Merci de téléverser un fichier au format PDF, PNG, JPEG ou SVG.
		</p>
		<p class="error-message error-message_color_red error-message-user-picture-size display-none">
			Merci de téléverser un fichier de maximum 2 000 000 bytes.
		</p>
		{{ form_errors(adminUserUpdateForm.upload) }}
	</div>
	{# delete picture #}
	<a class="page__link page__delete-user-picture-link page__link_background-color_red page__link_color_white" id="delete-user-picture-link" href="{{ path('admin_user_delete_picture', {'id':user.id, 'token':csrf_token('delete-user-picture' ~ user.id)} ) }}">Supprimer la photo</a>
	{# civilityTitle #}
	<div class="form-field">
		{{ form_widget(adminUserUpdateForm.civilityTitle) }}
		<p class="error-message error-message_color_red error-message-user-gender-not-checked display-none">
			Merci de sélectionner une valeur.
		</p>
		{{ form_errors(adminUserUpdateForm.civilityTitle) }}
	</div>
	{# firstName #}
	<div class="form-field">
		{{ form_label(adminUserUpdateForm, 'Prénom', { 'label_attr': { 'class': 'form-field__label form-field__user-first-name-label display-none' }}) }}
		{{ form_widget(adminUserUpdateForm.firstName, { 'id': 'user-first-name-input', 'attr': {'class': 'form-field__input form-field__user-first-name-input form-field__input_color_black', 'placeholder': 'Prénom' }}) }}
		<p class="error-message error-message_color_red error-message-user-first-name display-none">
			Merci de saisir un prénom.
		</p>
		{{ form_errors(adminUserUpdateForm.firstName) }}
	</div>
	{# lastName #}
	<div class="form-field">
		{{ form_label(adminUserUpdateForm, 'Nom', { 'label_attr': { 'class': 'form-field__label form-field__user-last-name-label display-none' }}) }}
		{{ form_widget(adminUserUpdateForm.lastName, { 'id': 'user-last-name-input', 'attr': { 'class': 'form-field__input form-field__user-last-name-input form-field__input_color_black', 'placeholder': 'Nom' }}) }}
		<p class="error-message error-message_color_red error-message-user-last-name display-none">
			Merci de saisir un nom.
		</p>
		{{ form_errors(adminUserUpdateForm.lastName) }}
	</div>
	{# email #}
	<div class="form-field">
		{{ form_label(adminUserUpdateForm, 'E-mail', { 'label_attr': { 'class': 'form-field__label form-field__user-e-mail-label display-none' }}) }}
		{{ form_widget(adminUserUpdateForm.email, { 'id': 'user-e-mail-input', 'attr': { 'class': 'form-field__input form-field__user-e-mail-input form-field__input_color_black', 'placeholder': 'E-mail' }}) }}
		<p class="error-message error-message_color_red error-message-user-e-mail display-none">
			Merci de saisir un e-mail.
						/p>{{ form_errors(adminUserUpdateForm.email) }}
		</p>
	</div>
	{# password #}
	<div class="form-field">
		{{ form_label(adminUserUpdateForm, 'Mot de passe', { 'label_attr': { 'class': 'form-field__label form-field__user-password-label display-none' }}) }}
		{{ form_widget(adminUserUpdateForm.password, { 'id': 'user-password-input', 'attr': {'class': 'form-field__input form-field__user-password-input form-field__input_color_black', 'placeholder': 'Mot de passe' }}) }}
		<p class="error-message error-message_color_red error-message-user-password display-none">
			Merci de saisir un mot de passe.
		</p>
		<p class="error-message error-message_color_red error-message-user-password-length display-none">
			Le mot de passe doit contenir au moins 8 caractères.
		</p>
		<p class="error-message error-message_color_red error-message-user-password-lowercase display-none">
			Le mot de passe doit contenir au moins une minuscule.
		</p>
		<p class="error-message error-message_color_red error-message-user-password-uppercase display-none">
			Le mot de passe doit contenir au moins une majuscule.
		</p>
		<p class="error-message error-message_color_red error-message-user-password-number display-none">
			Le mot de passe doit contenir au moins un chiffre.
		</p>
		<p class="error-message error-message_color_red error-message-user-password-special-character display-none">
			Le mot de passe doit contenir au moins un caractére spécial.
		</p>
		{{ form_errors(adminUserUpdateForm.password) }}
	</div>
	{# roles #}
	<div class="form-field">
		{{ form_label(adminUserUpdateForm, 'Selectionner le potentiel rôle de l\'utilisateur:', { 'label_attr': { 'class': 'form-field__label form-field__user-roles-label' }}) }}
		    {{ form_widget(adminUserUpdateForm.roles) }}
			<p class="error-message error-message_color_red error-message-user-roles-not-checked display-none">
				Merci de sélectionner un rôle.
			</p>
		    {{ form_errors(adminUserUpdateForm.roles) }}
    	</div>
		{# Submit adminUserUpdateForm button #}
        <button type="submit" class="page__button page__update-button page__submit-button page__button_background-color_orange page__button_color_white" id="admin-user-update-button">
	        Mettre à jour
        </button>
        {{ form_end(adminUserUpdateForm) }}
	</section>
{% endblock %}
{# END: admin_user_update #}
