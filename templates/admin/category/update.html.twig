{% extends 'base.html.twig' %}

{% block title %}
	Mettre à jour - Catégorie -
	{{ category.name }}
	|
	{{ parent() }}
{% endblock %}

{# START: admin_category_update #}
{% block body %}
	<section class="page">
		<h2>Mettre à jour Catégorie :
			{{ category.name }}</h2>
		{# START :adminCategoryUpdateForm #}
		{{ form_start(adminCategoryUpdateForm, { 'attr': { 'novalidate': 'novalidate', 'class': 'form', 'id': 'admin-category-update-form' }}) }}
		{# name #}
		<div class="form-field">
			{{ form_label(adminCategoryUpdateForm, 'Nom:', { 'label_attr': { 'class': 'form-field__label form-field__category-name-label display-none' }}) }}
			{{ form_widget(adminCategoryUpdateForm.name, { 'id': 'category-name-input', 'attr': {'class': 'form-field__input form-field__category-name-input form-field__input_color_black', 'placeholder': 'Nom' }}) }}
			<p class="error-message error-message_color_red error-message-category-name-empty display-none">
				Merci de saisir un nom.
			</p>
			{{ form_errors(adminCategoryUpdateForm.name) }}
		</div>
		{# adminCategoryUpdateForm submit button #}
		<button type="submit" class="page__button page__update-button page__submit-button page__button_background-color_orange page__button_color_white" id="admin-category-update-button">
			Mettre à jour
		</button>
		{{ form_end(adminCategoryUpdateForm) }}
		{# END: adminCategoryUpdateForm #}
	</section>
{% endblock %}
{# END: admin_category_update #}
