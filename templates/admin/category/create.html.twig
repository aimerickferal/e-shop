{% extends 'base.html.twig' %}

{% block title %}
	Créer - Catégorie |
	{{ parent() }}
{% endblock %}

{# START: admin_category_create #}
{% block body %}
	<section class="page">
		<h2>Créer une Catégorie</h2>
		{{ form_start(adminCategoryCreateForm, { 'attr': { 'novalidate': 'novalidate', 'class': 'form', 'id': 'admin-category-create-form' }}) }}
		{# name #}
		<div class="form-field">
			{{ form_label(adminCategoryCreateForm, 'Nom:', { 'label_attr': { 'class': 'form-field__label form-field__category-name-label display-none' }}) }}
			{{ form_widget(adminCategoryCreateForm.name, { 'id': 'category-name-input', 'attr': {'class': 'form-field__input form-field__category-name-input form-field__input_color_black', 'placeholder': 'Nom' }}) }}
			<p class="error-message error-message_color_red error-message-category-name display-none">
				Merci de saisir un nom.
			</p>
			{{ form_errors(adminCategoryCreateForm.name) }}
		</div>
		{# adminCategoryCreateForm submit button #}
		<button type="submit" class="page__button page__create-button page__submit-button page__button_background-color_dodger-blue page__button_color_white" id="admin-category-create-button">
			Créer
		</button>
		{{ form_end(adminCategoryCreateForm) }}
	</section>
{% endblock %}
{# END: admin_category_create #}
