<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}
				E-Shop
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('assets/css/reset.css') }}"/>
			<link
			rel="stylesheet" href="{{ asset('assets/css/style.css') }}"/>
			{# Google Fonts : Roboto #}
			<link rel="preconnect" href="https://fonts.googleapis.com">
			<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
			<link
			href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;700&display=swap" rel="stylesheet">
		{% endblock %}
	</head>
	<body>
		<div class="wrapper">
			{% block header %}
				{% include "layout/header.html.twig" %}
			{% endblock %}
			{% include "partials/_nav-mobile.html.twig" %}
			{% include "partials/_flash.html.twig" %}
			{# {% include "partials/_message.html.twig" %} #}
			<main>
				{% block body %}{% endblock %}
			</main>
			{% block footer %}
				{% include "layout/footer.html.twig" %}
			{% endblock %}
		</div>
		{% block javascripts %}
			<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.1/chart.min.js"></script>
			<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2.0.0"></script>
			<script type="text/javascript" src="{{ asset('assets/js/app.js') }}"></script>
			<script type="text/javascript" src="{{ asset('assets/js/modules/tools.js') }}"></script>
			<script type="text/javascript" src="{{ asset('assets/js/modules/responsive.js') }}"></script>
			<script type="text/javascript" src="{{ asset('assets/js/modules/nav.js') }}"></script>
			<script type="text/javascript" src="{{ asset('assets/js/modules/form.js') }}"></script>
			<script type="text/javascript" src="{{ asset('assets/js/modules/confirmDelete.js') }}"></script>
			<script type="text/javascript" src="{{ asset('assets/js/modules/purchase.js') }}"></script>
			<script type="text/javascript" src="{{ asset('assets/js/modules/chart.js') }}"></script>
			<script type="text/javascript" src="{{ asset('assets/js/modules/customerService.js') }}"></script>
		{% endblock %}
	</body>
</html>
